<div class="container shadow-sm p-3 bg-white rounded p-5">
  <h1 class="text-primary text-center"><%= @list.name.upcase %></h2>
  <p class="text-primary text-center"><%= pluralize(@list.bookmarks.count, 'movie') %></p>
  <div class="d-flex justify-content-between my-3 align-items-center">
    <%= link_to "DELETE LIST", list_path(@list), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-secondary" %>
    <div>
      <%= link_to "ADD MOVIE",  new_list_bookmark_path(@list), class: 'btn btn-primary text-white' %>
      <%= link_to "BACK", lists_path, class: 'btn btn-primary text-white' %>
    </div>
  </div>
  <div class="cards row d-flex justify-content-around">
    <% @list.bookmarks.each do |bookmark| %>
    <div class="col-sm-12 col-md-6">
      <div class="card-trip shadow-sm p-0 m-3">
        <%= image_tag bookmark.movie.poster_url, alt: "Poster #{bookmark.movie.title}", class: "poster" %>
        <div class="card-trip-infos p-3">
        <div>
          <h2><%=  bookmark.movie.title %></h2>
          <p><%= bookmark.movie.overview %></p>
          <p><%= bookmark.comment %></p>
        </div>
        <div class="text-end">
          <%= link_to "DELETE", bookmark_path(bookmark), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-secondary m-3"%>
        </div>
      </div>
    </div>
  </div>
  <% end %>
  </div>
</div>
